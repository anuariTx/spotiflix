{
  "compilerOptions": {
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "../",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "paths": {
      "@app/*": ["../src/app/*"],
      "@auth/*": ["../src/auth/*"],
      "@dashboard/*": ["../src/dashboard/*"],
      "@error/*": ["../src/error/*"],
      "@posts/*": ["../src/posts/*"],
      "@section/*": ["../src/section/*"],
      "@services/*": ["../src/services/*"],
      "@settings/*": ["../src/settings/*"],
      "@sign-in/*": ["../src/sign-in/*"],
      "@shared/*": ["../src/shared/*"],
      "@assets/*": ["../src/shared/assets/*"],
      "@constants/*": ["../src/shared/constants/*"],
      "@interfaces/*": ["../src/shared/interfaces/*"],
      "@layout/*": ["../src/shared/layout/*"],
      "@rdx/*": ["../src/shared/rdx/*"],
      "@routes/*": ["../src/shared/routes/*"],
      "@themes/*": ["../src/shared/themes/*"],
      "@shared-types/*": ["../src/shared/types/*"],
      "@utils/*": ["../src/shared/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "**/*/*.test.ts",
    "examples"
  ]
}
